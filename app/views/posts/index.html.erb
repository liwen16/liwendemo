<h1>Posts</h1>
  <% @posts.each do |post| %>
<p>
  <%= post.title %>
  <br>
  <%= post.body %>
  <br>
  <%= link_to 'Edit', edit_post_path(post) %>
  <%= link_to 'Delete', post_path(post), method: :Delete, datea:{confirm: 'Are you certain???'}%>
</p>
<% end %>
<%= link_to "Add New",new_post_path %>
