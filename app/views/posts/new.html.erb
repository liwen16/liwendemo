<h1>New Post</h1>
<%= form_for @post do |f| %>
<p>
  <%= f.label :title %>
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :body %>
  <%= f.text_area :body %>
</p>
<p>
  <%= f.select :category_id,  Category.all.collect  {|x| [x.name, x.id, {:include_blank  => "Select One"}]} %>
</p>
<p>
  <%= f.submit "add now" %>
</p>
<% end %>
<%= link_to 'Back', posts_path %>
