<p id="notice"><%= notice %></p>

<h1>Liwen Samples</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Instructions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @liwen_samples.each do |liwen_sample| %>
      <tr>
        <td><%= liwen_sample.name %></td>
        <td><%= liwen_sample.instructions %></td>
        <td><%= link_to 'Show', liwen_sample %></td>
        <td><%= link_to 'Edit', edit_liwen_sample_path(liwen_sample) %></td>
        <td><%= link_to 'Destroy', liwen_sample, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

